<h1>Cadastrar Inquilino:</h1>


<div class="card">
  <div class="card-body">
    <form action="/inquilinos/salvar" method="post">
      <label for="nome">Nome: </label>
        <input type="text" name="nome" class="form-control" required>
      <label for="cpf">CPF: </label>
        <input type="number" name="cpf" class="form-control" required>
      <label for="email">E-mail: </label>  
        <input type="email" name="email" class="form-control" required>
      <label for="senha">Senha: </label>
        <input type="password" name="senha" class="form-control" required>
      <label for="senha2">Insira a senha novamente: </label>
        <input type="password" name="senha2" class="form-control" required>
      
      <button type="password" class="btn btn-primary mt-4">Salvar Inquilino</button>
    </form>
  </div>
</div>