<h1>Editar: {{inquilino.nome}}</h1>

<form action="/inquilinos/editarPost" method="POST">
<input type="hidden" name="id" value="{{inquilino._id}}">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="nome">Nome</label>
      <input type="text" name="nome" class="form-control" id="nome"  value="{{inquilino.nome}}">
    </div>
    <div class="form-group col-md-6">
      <label for="cpf">CPF</label>
      <input type="text" name="cpf" class="form-control" id="cpf"  value="{{inquilino.cpf}}">
    </div>
  </div>
  <div class="form-group">
    <label for="email">E-mail</label>
    <input type="text" name="email" class="form-control" id="email"  value="{{inquilino.email}}">
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="senha">Senha</label>
      <input type="password" name="senha" class="form-control" id="senha">
  <div class="form-group">
    <div class="form-row">
    <div class="form-group col-md-6">
      <label for="senha2">Repita a senha</label>
      <input type="password" name="senha2" class="form-control" id="senha2">
  <div class="form-group">
  </div>
  <button type="submit" class="btn btn-primary">Editar</button>
</form>